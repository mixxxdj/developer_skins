<!DOCTYPE skin>
<skin>
	<manifest>
		<title>Advanced-Player</title>
		<author>jclaveau</author>
		<version>1.12.0.01</version>
		<description>A proof of concept that Mixxx can be an amazing player</description>
		<language>en</language>
		<license>Creative Commons Attribution, Share-Alike 3.0 Unported</license>
		<attributes>
			<attribute config_key="[Master],num_decks">2</attribute>
			<attribute config_key="[Master],num_preview_decks">0</attribute>
			<!--Optionally, make elements visible on skin load-->
			<!--attribute config_key="[PreviewDeck],show_previewdeck">0</attribute-->
			<attribute config_key="[Channel1],keylock">1</attribute>
			<attribute config_key="[Channel2],keylock">1</attribute>
			
			<attribute config_key="[Channel1],quantize">1</attribute>
			<attribute config_key="[Channel2],quantize">1</attribute>
			
			<!--attribute config_key="[Channel1],sync_enabled">1</attribute>
			<attribute config_key="[Channel2],sync_enabled">1</attribute-->
			
			<attribute config_key="[Master],headMix">1</attribute>
			
		</attributes>
	</manifest>

	<ObjectName>Mixxx</ObjectName>
	<Style src="skin:style.qss"/>

	<MinimumSize>400,-1</MinimumSize>
	<SizePolicy>me,me</SizePolicy>
	<Layout>vertical</Layout>
	
	<!--
	**********************************************
	General- Skin Colour Scheme
	**********************************************
	-->
	
	<Schemes>
		<Scheme>
			<Name>5pm (Classic Mixxx)</Name>
			<Filters/>
		</Scheme>
		<Scheme>
			<Name>11pm (Dark Mixxx)</Name>
			<Filters>
				<Invert/>
				<HueInv/>
				<Add>
					<Amount>50</Amount>
				</Add>
				<ScaleWhite>
					<Amount>1.5</Amount>
				</ScaleWhite>
				<Add>
					<Amount>-50</Amount>
				</Add>
			</Filters>
		</Scheme>
		<Scheme>
			<Name>3am (Still Awake Mixxx)</Name>
			<Filters>
				<Invert/>
				<Add>
					<Amount>50</Amount>
				</Add>
				<ScaleWhite>
					<Amount>1.5</Amount>
				</ScaleWhite>
				<Add>
					<Amount>-50</Amount>
				</Add>
			</Filters>
		</Scheme>
	</Schemes>
	
	<Children>
		
		
		<WidgetGroup>
			<ObjectName>Decks and Master</ObjectName>
			<Layout>horizontal</Layout>
			<SizePolicy>me,max</SizePolicy>
			<Children>
				
				<Template src="skin:skin_spacer_vx.xml">
					<SetVariable name="height">7</SetVariable>
				</Template>
				
				<Template src="skin:skin_master_control.xml">
				</Template>
				
				<Template src="skin:skin_spacer_vx.xml">
					<SetVariable name="height">7</SetVariable>
				</Template>
				
				<WidgetGroup>
					<ObjectName>Decks</ObjectName>
					<Layout>vertical</Layout>
					<SizePolicy>me,me</SizePolicy>
					<Children>
						
						<Template src="skin:skin_deck.xml">
							<SetVariable name="i">1</SetVariable>
							<SetVariable name="height">111</SetVariable>
							<SetVariable name="track_dark_color">#7086ca</SetVariable>
							<SetVariable name="track_light_color">#13a9fc</SetVariable>
							<SetVariable name="track_text_color">#13a9fc</SetVariable>
						</Template>
						
						<Template src="skin:skin_deck.xml">
							<SetVariable name="i">2</SetVariable>
							<SetVariable name="height">111</SetVariable>
							<SetVariable name="track_dark_color">#dd9999</SetVariable>
							<SetVariable name="track_light_color">#ff0000</SetVariable>
							<SetVariable name="track_text_color">#ff0000</SetVariable>
						</Template>
						
					</Children>
				</WidgetGroup>
				
				<Template src="skin:skin_spacer_vx.xml">
					<SetVariable name="height">7</SetVariable>
				</Template>
				
				<WidgetGroup>
					<ObjectName>Crossfader</ObjectName>
					<Layout>vertical</Layout>
					<SizePolicy>f,min</SizePolicy>
					<Size>33,-1</Size>
					<Children>
						
						<SetVariable name="width">33</SetVariable>
						<!--SetVariable name="height">111</SetVariable-->
						<SetVariable name="height">126</SetVariable>
						<SetVariable name="margin">7.5</SetVariable>
						<SetVariable name="offset">16</SetVariable>
						
						<SetVariable name="handle_width">33</SetVariable>
						<SetVariable name="handle_height">15</SetVariable>
						
						<SetVariable name="color">#00ff00</SetVariable>
						
						<SetVariable name="text">xfader</SetVariable>
						<SetVariable name="text_x">16</SetVariable>
						<SetVariable name="text_y">106</SetVariable>
						
						<SliderComposed>
							<TooltipId>crossfader</TooltipId>
							<Slider>slider-vertical.svg</Slider>
							<Handle>handle-vertical.svg</Handle>
							<Horizontal>false</Horizontal>
							<Connection>
								<ConfigKey>[Master],crossfader</ConfigKey>
								<Transform>
									<Invert/>
									<Add>1</Add>
								</Transform>
							</Connection>
						</SliderComposed>
						
						<Template src="skin:skin_spacer_vx.xml">
							<SetVariable name="height">7</SetVariable>
						</Template>
						
					
					
					</Children>
				</WidgetGroup>
				
				<Template src="skin:skin_spacer_vx.xml">
					<SetVariable name="height">7</SetVariable>
				</Template>
				
			</Children>
		</WidgetGroup>
		
		<Template src="skin:skin_library.xml">
		</Template>
		
	</Children>
</skin>









